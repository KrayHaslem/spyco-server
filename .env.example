# Database (provided by Heroku Postgres add-on)
DATABASE_URL=postgresql://user:password@localhost:5432/spyco

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256

# Flask Environment
FLASK_ENV=production

# SMS Service (ClickSend)
CLICKSEND_USERNAME=your-clicksend-username
CLICKSEND_API_KEY=your-clicksend-api-key

# Client URL (for SMS links) - set to your Heroku app URL
CLIENT_URL=https://your-app.herokuapp.com
